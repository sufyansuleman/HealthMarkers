citHeader("To cite HealthMarkers in publications use:")

bibentry(
  bibtype  = "Manual",
  title    = "HealthMarkers: Clinical Marker Calculators and Indices",
  author   = person("Sufyan", "Suleman"),
  year     = format(Sys.Date(), "%Y"),
  note     = sprintf("R package version %s", meta$Version),
  url      = "https://github.com/sufyansuleman/HealthMarkers",
  textVersion = paste0(
    "Suleman, S. (", format(Sys.Date(), "%Y"), "). ",
    "HealthMarkers: Clinical Marker Calculators and Indices. ",
    "R package version ", meta$Version, ". ",
    "https://github.com/sufyansuleman/HealthMarkers"
  )
)